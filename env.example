# Environment Variables untuk GitAnime Backend

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# Admin Password untuk endpoint protected
ADMIN_PASSWORD=your_admin_password_here

# Samehadaku URL
SAMEHADAKU_URL=https://v1.samehadaku.how/

# Data File Paths (akan otomatis diset untuk production)
DATA_FILE=./data/anime-data.json
CONFIG_FILE=./data/config.json
ANIME_LIST_FILE=./data/anime-list.json
LATEST_EPISODES_FILE=./data/latest-episodes.json

# CORS Configuration
# Tambahkan domain frontend yang diizinkan
ALLOWED_ORIGINS=https://gitanime-web.vercel.app,https://frontend-*.vercel.app

# Cache Configuration
CACHE_EXPIRY=300000
